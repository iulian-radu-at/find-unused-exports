{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "out",
    "lib": ["es6"],
    "sourceMap": true,
    "rootDir": ".",
    "moduleSuffixes": ["notext", ".native", ""],
    "isolatedModules": true,
    "paths": {
      "@/types/*": ["./types/*"],
      "@/functions/*": ["./utils/functions/*"],
      "@functions/*": ["./utils/functions/*"],
      "@/*": ["./src/*"]
    }
  },
  "files": ["index.ts"],
  "include": ["./**/*"],
  "exclude": ["node_modules/**"]
}
